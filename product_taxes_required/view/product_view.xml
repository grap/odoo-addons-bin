<openerp>
    <data>
        <record id="view_product_product_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="purchase.view_product_account_purchase_ok_form"/>
            <field name="arch" type="xml">
                <field name="taxes_id" position="attributes">
                    <attribute name="attrs">{'required':[('sale_ok','=',True)],'readonly':[('sale_ok','=',False)]}</attribute>
                </field>
                <field name="supplier_taxes_id" position="attributes">
                    <attribute name="attrs">{'required':[('purchase_ok','=',True)],'readonly':[('purchase_ok','=',False)]}</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>

